    <!-- 2. Muatkan JavaScript untuk Leaflet.js (Peta) -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

    <!-- 3. Skrip Aplikasi Utama -->
    <script>
        // --- Pembolehubah Global & Rujukan DOM ---
        
        // Koordinat Kaabah (Latitud & Longitud)
        const KAABA_LAT = 21.4225;
        const KAABA_LON = 39.8262;

        // Rujukan elemen DOM
        const findBtn = document.getElementById('find-qibla-btn');
        const resultContainer = document.getElementById('result-container');
        const resultText = document.getElementById('result-text');
        const errorMsg = document.getElementById('error-message');
        const compassArrow = document.getElementById('compass-arrow');

        // Pembolehubah untuk peta Leaflet (untuk elak ralat jika dimulakan semula)
        let map;
        let userMarker;
        let kaabaMarker;
        let qiblaLine;

        // --- Logik Utama ---

        // Tambah pendengar acara pada butang
        findBtn.addEventListener('click', findQibla);

        function findQibla() {
            // Bersihkan ralat & keputusan lama
            errorMsg.textContent = '';
            resultContainer.style.display = 'none';

            // Tetapkan keadaan 'memuat' pada butang
            findBtn.disabled = true;
            findBtn.textContent = 'Mencari Lokasi...';

            // 1. Semak jika Geolokasi disokong
            if (!navigator.geolocation) {
                showError("Maaf, pelayar anda tidak menyokong Geolokasi.");
                return;
            }

            // 2. Semak jika pengguna berada di luar talian
            if (!navigator.onLine) {
                showError("Sila semak sambungan internet anda. Anda kelihatan di luar talian.");
                return;
            }

            // 3. Dapatkan lokasi semasa
            navigator.geolocation.getCurrentPosition(successCallback, errorCallback, {
                enableHighAccuracy: true, // Cuba dapatkan lokasi terbaik
                timeout: 10000 // Masa tamat 10 saat
            });
        }

        // --- Fungsi Callback Geolokasi ---

        function successCallback(position) {
            const userLat = position.coords.latitude;
            const userLon = position.coords.longitude;

            // 1. Kira sudut Kiblat
            const qiblaAngle = calculateQibla(userLat, userLon);

            // 2. Paparkan keputusan teks
            resultText.textContent = `Arah Kiblat dari lokasi anda: ${qiblaAngle.toFixed(2)}Â° dari utara sebenar.`;

            // 3. Pusingkan jarum kompas
            compassArrow.style.transform = `rotate(${qiblaAngle}deg)`;

            // 4. Paparkan keseluruhan bahagian keputusan
            resultContainer.style.display = 'block';

            // 5. Paparkan peta
            showMap(userLat, userLon);
            
            // Pulihkan butang
            resetButton();
        }

        function errorCallback(error) {
            // Paparkan mesej ralat yang sesuai
            switch(error.code) {
                case error.PERMISSION_DENIED:
                    showError("Anda telah menafikan kebenaran lokasi. Sila benarkan lokasi dalam tetapan pelayar anda untuk menggunakan ciri ini.");
                    break;
                case error.POSITION_UNAVAILABLE:
                    showError("Maklumat lokasi anda tidak dapat diperoleh. Sila cuba lagi.");
                    break;
                case error.TIMEOUT:
                    showError("Masa tamat semasa cuba mendapatkan lokasi. Sila cuba lagi.");
                    break;
                default:
                    showError("Berlaku ralat yang tidak diketahui semasa mendapatkan lokasi.");
                    break;
            }
        }

        // --- Fungsi Bantuan (Helper) ---

        /**
         * Mengira bearing (sudut) dari lokasi pengguna ke Kaabah.
         * Formula Haversine/Bearing.
         */
        function calculateQibla(lat, lon) {
            // Tukar darjah ke radian
            const toRad = (deg) => deg * (Math.PI / 180);
            const toDeg = (rad) => rad * (180 / Math.PI);

            const phiK = toRad(KAABA_LAT);
            const lambdaK = toRad(KAABA_LON);
            const phiU = toRad(lat);
            const lambdaU = toRad(lon);

            // Formula bearing
            const deltaLambda = lambdaK - lambdaU;
            
            const y = Math.sin(deltaLambda) * Math.cos(phiK);
            const x = Math.cos(phiU) * Math.sin(phiK) -
                      Math.sin(phiU) * Math.cos(phiK) * Math.cos(deltaLambda);
            
            let bearing = toDeg(Math.atan2(y, x));

            // Normalkan bearing ke 0-360 darjah (dari Utara)
            bearing = (bearing + 360) % 360;

            return bearing;
        }

        /**
         * Memaparkan peta Leaflet dengan penanda dan garisan.
         */
        function showMap(userLat, userLon) {
            const userCoords = [userLat, userLon];
            const kaabaCoords = [KAABA_LAT, KAABA_LON];

            // 1. Mulakan Peta (jika belum)
            if (!map) {
                map = L.map('map');
                // Guna OpenStreetMap sebagai lapisan tile
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    maxZoom: 19,
                    attribution: 'Â© <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
                }).addTo(map);
            }

            // 2. Tetapkan Penanda Pengguna
            if (!userMarker) {
                userMarker = L.marker(userCoords).addTo(map);
            } else {
                userMarker.setLatLng(userCoords);
            }
            userMarker.bindPopup('<b>Lokasi Anda</b>').openPopup();

            // 3. Tetapkan Penanda Kaabah (hanya sekali)
            if (!kaabaMarker) {
                kaabaMarker = L.marker(kaabaCoords).addTo(map);
                kaabaMarker.bindPopup('<b>Kaabah</b>');
            }

            // 4. Lukis Garisan Kiblat (Polylin)
            const points = [userCoords, kaabaCoords];
            if (!qiblaLine) {
                qiblaLine = L.polyline(points, {
                    color: '#28a745', // Warna hijau
                    weight: 3,
                    opacity: 0.8
                }).addTo(map);
            } else {
                qiblaLine.setLatLngs(points);
            }

            // 5. Zooms peta untuk memuatkan kedua-dua titik
            map.fitBounds([userCoords, kaabaCoords], { padding: [50, 50] });
        }

        /**
         * Memaparkan mesej ralat dan memulihkan butang.
         */
        function showError(message) {
            errorMsg.textContent = message;
            resetButton();
        }

        /**
         * Memulihkan keadaan butang kepada asal.
         */
        function resetButton() {
            findBtn.disabled = false;
            findBtn.textContent = 'Jejak Kiblat Saya Sekarang';
        }

    </script>
</body>
</html>
