        #find-qibla-btn:active {
            transform: scale(0.98);
        }

        #find-qibla-btn:disabled {
            background-color: #aaa;
            cursor: not-allowed;
        }

        /* --- Bahagian Keputusan (Tersembunyi secara lalai) --- */
        #result-container {
            margin-top: 30px;
            display: none; /* Akan ditukar kepada 'block' oleh JavaScript */
            animation: fadeIn 0.5s ease-in-out;
